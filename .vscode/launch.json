{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug All Automation Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
      "args": [
        "run",
        "test/wdio.conf.ts"
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Current Automation Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
      "args": [
        "run",
        "test/wdio.conf.ts",
        "--spec",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "(PNH) Debug Current Automation Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
      "env": {
        "EXTENSION_PATH": "/Users/peter.hale/git/vse/packages",
        "DEV_HUB_SFDX_AUTH_URL": "force://PlatformCLI::5Aep8612E5JLxJp3ESIXoO277mV4I.qJxA4bxutk8bsnO5B93z3sW1ibxM3WkNhN.lnmlQw6qDjUkIUjUtZ4BC1@na40-dev-hub.my.salesforce.com",
        "DEV_HUB_USER_NAME": "admin@integrationtesthubna40.org"
      },
      "args": [
        "run",
        "test/wdio.conf.ts",
        "--spec",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run All Automation Tests",
      "program": "${workspaceFolder}/app.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "preLaunchTask": "Run All Automation Tests",
    },
    {
      "name": "Run Current Automation Test",
      "program": "${workspaceFolder}/app.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "preLaunchTask": "Run Current Automation Test",
    }
  ]
}
